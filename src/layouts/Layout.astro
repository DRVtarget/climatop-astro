---
const { title = "Climatop - Air Conditioning Costa Blanca", description = "Air conditioning installation, maintenance & repairs in Costa Blanca South. Fast response, clean installation, transparent pricing.", canonical = "" } = Astro.props;

const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>

    <style>
      :root{
        --bg: #070c14;
        --panel: rgba(255,255,255,.06);
        --panel2: rgba(255,255,255,.08);
        --text: rgba(255,255,255,.92);
        --muted: rgba(255,255,255,.70);
        --muted2: rgba(255,255,255,.55);
        --line: rgba(255,255,255,.10);
        --brand: #2f7dff;
        --brand2: #3bd184; /* WhatsApp-ish accent */
        --danger: #ff4d4d;
        --shadow: 0 18px 60px rgba(0,0,0,.45);
        --radius: 16px;
        --max: 1160px;
      }

      *{ box-sizing: border-box; }
      html, body{ height: 100%; }
      body{
        margin: 0;
        background:
          radial-gradient(1100px 600px at 70% -10%, rgba(47,125,255,.22), transparent 60%),
          radial-gradient(900px 500px at 15% 10%, rgba(59,209,132,.14), transparent 60%),
          radial-gradient(900px 500px at 80% 60%, rgba(122,93,255,.12), transparent 60%),
          var(--bg);
        color: var(--text);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Noto Sans", "Liberation Sans", sans-serif;
        line-height: 1.45;
      }

      a{ color: inherit; text-decoration: none; }
      a:hover{ text-decoration: none; }
      img{ max-width: 100%; display: block; }

      .container{
        width: 100%;
        max-width: var(--max);
        margin: 0 auto;
        padding: 0 20px;
      }

      .topbar{
        position: sticky;
        top: 0;
        z-index: 50;
        background: rgba(7,12,20,.65);
        backdrop-filter: blur(14px);
        border-bottom: 1px solid var(--line);
      }

      .nav{
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 14px;
        height: 68px;
      }

      .brand{
        display:flex;
        align-items:center;
        gap: 10px;
        font-weight: 700;
        letter-spacing: .2px;
      }
      .brand-badge{
        width: 28px;
        height: 28px;
        border-radius: 10px;
        background: linear-gradient(135deg, rgba(47,125,255,.9), rgba(59,209,132,.8));
        box-shadow: 0 10px 25px rgba(47,125,255,.25);
      }
      .brand small{
        display:block;
        font-weight: 500;
        color: var(--muted2);
        margin-top: -2px;
      }

      .navlinks{
        display:flex;
        align-items:center;
        gap: 18px;
        color: var(--muted);
        font-weight: 600;
        font-size: 14px;
      }
      .navlinks a{
        padding: 10px 8px;
        border-radius: 10px;
      }
      .navlinks a:hover{
        background: rgba(255,255,255,.06);
        color: var(--text);
      }

      .actions{
        display:flex;
        gap: 10px;
        align-items:center;
      }

      .btn{
        display:inline-flex;
        align-items:center;
        justify-content:center;
        gap: 10px;
        padding: 10px 14px;
        border-radius: 999px;
        border: 1px solid var(--line);
        background: rgba(255,255,255,.04);
        color: var(--text);
        font-weight: 700;
        font-size: 14px;
        cursor: pointer;
        transition: transform .12s ease, background .12s ease, border-color .12s ease;
        user-select: none;
        white-space: nowrap;
      }
      .btn:hover{
        background: rgba(255,255,255,.07);
        transform: translateY(-1px);
        border-color: rgba(255,255,255,.16);
      }
      .btn.primary{
        border: none;
        background: linear-gradient(135deg, var(--brand), #5a8bff);
        box-shadow: 0 18px 40px rgba(47,125,255,.28);
      }
      .btn.whatsapp{
        border: none;
        background: linear-gradient(135deg, var(--brand2), #2bbf76);
        box-shadow: 0 18px 40px rgba(59,209,132,.22);
      }

      .main{
        min-height: calc(100vh - 68px);
      }

      footer{
        margin-top: 60px;
        border-top: 1px solid var(--line);
        background: rgba(0,0,0,.15);
      }
      .footer-grid{
        display:grid;
        grid-template-columns: 1.4fr 1fr 1fr;
        gap: 22px;
        padding: 26px 0;
      }
      .footer-title{
        font-weight: 800;
        margin: 0 0 8px 0;
      }
      .footer-muted{
        color: var(--muted);
        font-size: 14px;
        margin: 0;
      }
      .footer-col a{
        color: var(--muted);
        font-size: 14px;
        display:block;
        padding: 6px 0;
      }
      .footer-col a:hover{ color: var(--text); }

      .fineprint{
        padding: 14px 0 22px;
        color: var(--muted2);
        font-size: 13px;
        display:flex;
        align-items:center;
        justify-content: space-between;
        gap: 14px;
        flex-wrap: wrap;
      }

      /* Responsive */
      @media (max-width: 920px){
        .navlinks{ display:none; }
        .footer-grid{ grid-template-columns: 1fr; }
      }
    </style>
  </head>

  <body>
    <header class="topbar">
      <div class="container">
        <div class="nav">
          <a class="brand" href="/">
            <span class="brand-badge" aria-hidden="true"></span>
            <span>
              Climatop
              <small>Air conditioning · Costa Blanca</small>
            </span>
          </a>

          <nav class="navlinks" aria-label="Main navigation">
            <a href="#services">Services</a>
            <a href="#areas">Areas</a>
            <a href="#why">Why us</a>
            <a href="#brands">Brands</a>
            <a href="#contact">Contact</a>
          </nav>

          <div class="actions">
            <a class="btn" href="tel:+34XXXXXXXXX">Call</a>
            <a class="btn whatsapp" href="https://wa.me/34XXXXXXXXX" target="_blank" rel="noreferrer">WhatsApp</a>
            <a class="btn primary" href="#contact">Get quote</a>
          </div>
        </div>
      </div>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer>
      <div class="container">
        <div class="footer-grid">
          <div>
            <p class="footer-title">Climatop</p>
            <p class="footer-muted">
              Air conditioning installation, maintenance & repairs in Costa Blanca South.
              Torrevieja · Orihuela Costa · Guardamar and nearby.
            </p>
          </div>

          <div class="footer-col">
            <p class="footer-title">Quick links</p>
            <a href="#services">Services</a>
            <a href="#areas">Service areas</a>
            <a href="#brands">Brands</a>
            <a href="#contact">Request a quote</a>
          </div>

          <div class="footer-col" id="contact">
            <p class="footer-title">Contact</p>
            <a href="tel:+34XXXXXXXXX">+34 XXX XXX XXX</a>
            <a href="mailto:info@climatop.es">info@climatop.es</a>
            <a href="https://wa.me/34XXXXXXXXX" target="_blank" rel="noreferrer">WhatsApp chat</a>
          </div>
        </div>

        <div class="fineprint">
          <span>© {year} Climatop</span>
          <span>Fast response · Clean installation · Transparent pricing</span>
        </div>
      </div>
    </footer>
  </body>
</html>

---
import Layout from "../layouts/Layout.astro";

const PHONE = "+34XXXXXXXXX";
const WHATSAPP = "https://wa.me/34XXXXXXXXX";

const title = "Climatop — Air Conditioning in Costa Blanca";
const description =
  "Professional air conditioning installation, maintenance & repairs in Torrevieja, Orihuela Costa & Guardamar. Fast response. Clean installation. Transparent pricing.";
---

<Layout title={title} description={description}>
  <style>
    .hero{
      padding: 54px 0 26px;
    }
    .hero-grid{
      display:grid;
      grid-template-columns: 1.25fr .75fr;
      gap: 22px;
      align-items: stretch;
    }
    .pill{
      display:inline-flex;
      gap: 8px;
      align-items:center;
      padding: 6px 10px;
      border-radius: 999px;
      background: rgba(255,255,255,.06);
      border: 1px solid rgba(255,255,255,.10);
      color: rgba(255,255,255,.78);
      font-weight: 700;
      font-size: 12px;
    }
    h1{
      margin: 12px 0 10px 0;
      font-size: clamp(34px, 4.2vw, 52px);
      line-height: 1.02;
      letter-spacing: -0.6px;
    }
    .sub{
      color: rgba(255,255,255,.70);
      font-size: 15px;
      max-width: 56ch;
      margin: 0 0 18px 0;
    }
    .cta-row{
      display:flex;
      gap: 10px;
      flex-wrap: wrap;
      margin: 16px 0 12px;
    }
    .trust{
      display:flex;
      gap: 14px;
      flex-wrap: wrap;
      color: rgba(255,255,255,.68);
      font-weight: 700;
      font-size: 12px;
      margin-top: 10px;
    }
    .dot{
      width:8px;height:8px;border-radius:999px;
      background: rgba(25,195,125,.9);
      box-shadow: 0 0 0 4px rgba(25,195,125,.15);
      display:inline-block;
      margin-right: 8px;
    }

    .card{
      background: rgba(255,255,255,.06);
      border: 1px solid rgba(255,255,255,.12);
      border-radius: 18px;
      box-shadow: 0 18px 50px rgba(0,0,0,.25);
      overflow:hidden;
    }
    .card-head{
      padding: 14px 16px;
      background: linear-gradient(90deg, rgba(43,116,255,.18), rgba(255,255,255,.02));
      border-bottom: 1px solid rgba(255,255,255,.10);
    }
    .card-head strong{ font-size: 14px; }
    .card-head p{ margin:4px 0 0 0; color: rgba(255,255,255,.65); font-size: 12px; }
    .card-body{ padding: 16px; display:grid; gap: 10px; }
    .row{
      display:flex; justify-content:space-between; gap: 12px;
      font-weight: 700; font-size: 13px;
      color: rgba(255,255,255,.80);
    }
    .row span:last-child{ color: rgba(255,255,255,.95); }
    .areas{
      color: rgba(255,255,255,.72);
      font-size: 12px;
      font-weight: 700;
      background: rgba(0,0,0,.18);
      border: 1px solid rgba(255,255,255,.10);
      padding: 8px 10px;
      border-radius: 12px;
    }
    .card-actions{ display:flex; gap:10px; flex-wrap:wrap; margin-top: 4px; }
    .wide-btn{
      width:100%;
      justify-content:center;
      padding: 12px 14px;
      border-radius: 14px;
      font-size: 14px;
    }

    /* Sections */
    section.block{
      padding: 46px 0;
      background: rgba(255,255,255,.02);
      border-top: 1px solid rgba(255,255,255,.06);
    }
    .section-title{
      text-align:center;
      margin: 0 0 10px 0;
      font-size: 28px;
      letter-spacing: -0.3px;
    }
    .section-sub{
      text-align:center;
      margin: 0 auto 26px auto;
      color: rgba(255,255,255,.68);
      max-width: 70ch;
      font-size: 14px;
    }

    .grid3{
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 14px;
    }
    .mini{
      padding: 18px;
      border-radius: 18px;
      background: rgba(255,255,255,.05);
      border: 1px solid rgba(255,255,255,.10);
    }
    .mini h3{
      margin:0 0 8px 0;
      font-size: 15px;
      letter-spacing: -0.2px;
    }
    .mini p{
      margin:0;
      color: rgba(255,255,255,.68);
      font-size: 13px;
      line-height: 1.5;
    }
    .list{
      margin: 10px 0 0 0;
      padding-left: 18px;
      color: rgba(255,255,255,.70);
      font-size: 13px;
    }
    .list li{ margin: 6px 0; }

    .brands{
      display:flex;
      gap: 10px;
      flex-wrap:wrap;
      justify-content:center;
      margin-top: 10px;
    }
    .tag{
      padding: 8px 10px;
      border-radius: 999px;
      background: rgba(255,255,255,.06);
      border: 1px solid rgba(255,255,255,.10);
      color: rgba(255,255,255,.78);
      font-weight: 800;
      font-size: 12px;
      letter-spacing: .2px;
    }

    /* Contact block */
    .contact{
      display:grid;
      grid-template-columns: 1.1fr .9fr;
      gap: 14px;
      align-items: stretch;
    }
    .contact .mini{ height:100%; }

    @media (max-width: 900px){
      .hero-grid{ grid-template-columns: 1fr; }
      .grid3{ grid-template-columns: 1fr; }
      .contact{ grid-template-columns: 1fr; }
    }
  </style>

  <div class="container hero">
    <div class="hero-grid">
      <div>
        <span class="pill">English-speaking • Costa Blanca</span>
        <h1>Professional Air Conditioning in Costa Blanca</h1>
        <p class="sub">
          Installation • Maintenance • Repairs • Heat Pumps — Torrevieja, Orihuela Costa & nearby.
          Fast response, clean work, and transparent pricing.
        </p>

        <div class="cta-row">
          <a class="btn btn-primary" href={`tel:${PHONE}`}>Call now</a>
          <a class="btn btn-green" href={WHATSAPP} target="_blank" rel="noreferrer">WhatsApp</a>
          <a class="btn" href="#contact">Get a quote</a>
        </div>

        <div class="trust">
          <span><i class="dot"></i>Fast response</span>
          <span><i class="dot"></i>Clean installation</span>
          <span><i class="dot"></i>Transparent pricing</span>
        </div>
      </div>

      <aside class="card" aria-label="Free consultation">
        <div class="card-head">
          <strong>Free consultation</strong>
          <p>Send photos on WhatsApp for a quick estimate.</p>
        </div>
        <div class="card-body">
          <div class="row"><span>Phone</span><span>{PHONE}</span></div>
          <div class="row"><span>WhatsApp</span><span>Chat now</span></div>
          <div class="row"><span>Areas</span><span>Torrevieja · Orihuela Costa · Guardamar</span></div>

          <div class="areas">
            Same-day visits when possible • Clear quote • Warranty on work
          </div>

          <div class="card-actions">
            <a class="btn btn-primary wide-btn" href="#contact">Request a quote</a>
            <a class="btn wide-btn" href={WHATSAPP} target="_blank" rel="noreferrer">WhatsApp now</a>
          </div>
        </div>
      </aside>
    </div>
  </div>

  <!-- Services -->
  <section id="services" class="block">
    <div class="container">
      <h2 class="section-title">Our Services</h2>
      <p class="section-sub">
        Everything for your comfort — from new installations to emergency repairs.
      </p>

      <div class="grid3">
        <div class="mini">
          <h3>New AC Installation</h3>
          <p>Proper sizing, clean piping, vacuum & pressure test, perfect finish.</p>
          <ul class="list">
            <li>Split / Multi-split</li>
            <li>Ducted systems</li>
            <li>Heat pumps</li>
          </ul>
        </div>

        <div class="mini">
          <h3>Maintenance</h3>
          <p>Prevent failures, improve air quality, and reduce electricity usage.</p>
          <ul class="list">
            <li>Deep cleaning</li>
            <li>Gas check</li>
            <li>Seasonal service</li>
          </ul>
        </div>

        <div class="mini">
          <h3>Repairs</h3>
          <p>Fast diagnostics and honest recommendations — repair only when it makes sense.</p>
          <ul class="list">
            <li>No cooling / leaks</li>
            <li>Noise / vibration</li>
            <li>Electrical faults</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Areas + Quick estimate -->
  <section id="areas" class="block">
    <div class="container">
      <h2 class="section-title">Service Areas</h2>
      <p class="section-sub">
        We cover the main areas of Costa Blanca South.
      </p>

      <div class="contact">
        <div class="mini">
          <h3>Areas we cover</h3>
          <p>Torrevieja · Orihuela Costa · Guardamar · La Zenia · Villamartin · San Miguel</p>
          <ul class="list">
            <li>Homeowners & rentals</li>
            <li>Businesses & commercial</li>
            <li>New builds & renovations</li>
          </ul>
        </div>

        <div class="mini">
          <h3>Quick estimate</h3>
          <p>
            Send 2–3 photos + your location on WhatsApp and we’ll reply with options and a price range.
          </p>
          <div class="cta-row">
            <a class="btn btn-green" href={WHATSAPP} target="_blank" rel="noreferrer">WhatsApp now</a>
            <a class="btn" href={`tel:${PHONE}`}>Call</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why -->
  <section id="why" class="block">
    <div class="container">
      <h2 class="section-title">Why Climatop</h2>
      <p class="section-sub">
        Professional work, clear communication, and service you can trust.
      </p>

      <div class="grid3">
        <div class="mini">
          <h3>Quality installation</h3>
          <p>Clean lines, correct vacuuming, safe electrics, and a tidy finish.</p>
        </div>
        <div class="mini">
          <h3>Clear communication</h3>
          <p>We explain options simply and send a clear quote before work starts.</p>
        </div>
        <div class="mini">
          <h3>Reliable service</h3>
          <p>Fast response in Costa Blanca South and warranty on our work.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Brands -->
  <section id="brands" class="block">
    <div class="container">
      <h2 class="section-title">Brands we work with</h2>
      <p class="section-sub">
        We install and service the most common AC brands in Spain.
      </p>

      <div class="brands">
        <span class="tag">Mitsubishi</span>
        <span class="tag">Daikin</span>
        <span class="tag">Fujitsu</span>
        <span class="tag">Panasonic</span>
        <span class="tag">LG</span>
        <span class="tag">Samsung</span>
        <span class="tag">Ferroli</span>
      </div>

      <div style="text-align:center; margin-top: 18px;">
        <a class="btn btn-primary" href="#contact">Get a quote</a>
      </div>
    </div>
  </section>
</Layout>
